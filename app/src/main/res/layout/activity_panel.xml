<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe166">

    <!-- Botão no canto superior esquerdo para abrir o menu -->


    <!-- Conteúdo principal da tela -->

    <!-- Botões no rodapé -->

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Menu"
        android:src="@drawable/hamburger"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerButtons"
        android:layout_below="@+id/menuButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coloque aqui o conteúdo principal da tela, como texto, imagens, etc. -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Painel de Controle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />


        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="168dp"
            android:layout_marginLeft="65px"
            android:layout_marginTop="100px"
            app:cardBackgroundColor="#f6f5ef"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:text="Saldo - Novembro"
                android:textColor="#737373" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="60dp"
                android:fontFamily="sans-serif"
                android:text="R$ 32.241,00"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="279dp"
            android:layout_height="267dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/mobile_grafic" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:background="#3b3737"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/Button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 1"
            android:src="@drawable/grafic_yellow"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/buttonEmployee"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 2"
            android:src="@drawable/customer"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/ButtonWallet"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 3"
            android:src="@drawable/wallet"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</RelativeLayout>

