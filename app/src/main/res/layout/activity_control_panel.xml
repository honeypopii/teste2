<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe166">

    <!-- Botão no canto superior esquerdo para abrir o menu -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="67dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Menu"
        android:src="@drawable/menu___hamburger" />

    <!-- Conteúdo principal da tela -->

    <!-- Botões no rodapé -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerButtons"
        android:layout_below="@+id/menuButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coloque aqui o conteúdo principal da tela, como texto, imagens, etc. -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Painel de Controle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />


        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="168dp"
            android:layout_marginLeft="65px"
            android:layout_marginTop="100px"
            app:cardBackgroundColor="#F6F5EF"
            app:cardCornerRadius="10dp">

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3b3737"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:text="Botão 1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:text="Botão 2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:text="Botão 3" />

    </LinearLayout>
</RelativeLayout>

