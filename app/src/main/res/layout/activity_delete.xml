<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe166">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Menu"
        android:src="@drawable/hamburger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerButtons"
        android:layout_below="@+id/menuButton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coloque aqui o conteúdo principal da tela, como texto, imagens, etc. -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Deletar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:fontFamily="sans-serif"
            android:text="Deseja mesmo deletar esse funcionário?"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <!-- LinearLayout horizontal para botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:backgroundTint="#FFE985"
                android:text="Cancelar"
                android:textColor="#3b3737"
                android:textSize="16dp" />


            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#FFE985"
                android:text="Deletar"
                android:textColor="#3b3737"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:background="#3b3737"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/buttonPanel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 1"
            android:src="@drawable/grafic" />

        <ImageButton
            android:id="@+id/buttonEmployee"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 2"
            android:src="@drawable/customer_yellow" />

        <ImageButton
            android:id="@+id/Button3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 3"
            android:src="@drawable/wallet" />

    </LinearLayout>
</RelativeLayout>
