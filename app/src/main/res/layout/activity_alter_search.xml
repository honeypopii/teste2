<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe166">

    <!-- Botão no canto superior esquerdo para abrir o menu -->


    <!-- Conteúdo principal da tela -->

    <!-- Botões no rodapé -->

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Menu"
        android:src="@drawable/hamburger"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerButtons"
        android:layout_below="@+id/menuButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coloque aqui o conteúdo principal da tela, como texto, imagens, etc. -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Alterar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_rounded_border"
            android:backgroundTint="#EAE4E4"
            android:hint="Selecione um funcionário"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#817E7E"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editText2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFE985"
            android:text="Alterar"
            android:textColor="#3b3737"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSearch"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <!-- Resultados serão adicionados dinamicamente aqui -->
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:background="#3b3737"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/buttonPanel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 1"
            android:src="@drawable/grafic" />

        <ImageButton
            android:id="@+id/buttonEmployee"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 2"
            android:src="@drawable/customer_yellow" />

        <ImageButton
            android:id="@+id/Button3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Botão 3"
            android:src="@drawable/wallet" />

    </LinearLayout>
</RelativeLayout>

